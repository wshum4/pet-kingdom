<div class="main_div" style='background-image: linear-gradient(rgba(255,255,255,0.3),rgba(255,255,255,0.8)), url(https://res.cloudinary.com/claidy/image/upload/v1597945224/etienne-girardet-SHKg9ZV16QU-unsplash_hd6mcv.jpg); height: 100vh; width: 100%'>
  <h1>My Animals</h1>

  <div class="container pt-5">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <% @animals.each do |animal| %>
          <div class="container">
            <%= animal.name %>
            <%= animal.age %>
            <%= animal.description %>
            <% if animal.photo.attached? %>
              <%= cl_image_tag animal.photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
          </div>
        <% end %>

        <!-- Button trigger modal -->
        <div class="d-flex">
          <button type="button" class="btn btn-primary dropbtn" data-toggle="modal" data-target="#animalForm">
            Create a New Animal
          </button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="animalForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="animalForm">Create a New Animal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= render "animals/form", animal: @animal %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
